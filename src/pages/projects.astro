---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-4xl w-full font-bold mb-8">Featured Projects</div>
  </div>

  <HorizontalCard
    title="📘 Educational Game Project Management"
    img="/projects/educational-game-preview-1.png"
    desc="Led a turnaround of a struggling educational 2D platformer game project by implementing structured feedback loops and transparent communication channels. Achieved 40% improvement in client satisfaction through strategic project management."
    url="/projects/educational-game"
    badge="Project Management"
  >
    <div class="flex flex-wrap gap-2 mt-2">
      <span class="badge badge-outline text-lg py-3">Agile</span>
      <span class="badge badge-outline text-lg py-3">Client Communication</span>
      <span class="badge badge-outline text-lg py-3">Team Leadership</span>
    </div>
  </HorizontalCard>

  <div class="divider my-4"></div>

  <HorizontalCard
    title="🌍 Intern Engagement Leadership at Emera"
    img="/projects/intern-engagement-3.jpeg"
    desc="Led co-op student committee initiatives including a successful fundraising campaign ($1,200 raised) and volunteer events. Represented company at university hiring fairs, driving a 60% increase in intern participation and engaging 20+ potential candidates."
    url="/projects/intern-engagement"
    badge="Leadership"
  >
    <div class="flex flex-wrap gap-2 mt-2">
      <span class="badge badge-outline text-lg py-3">Event Management</span>
      <span class="badge badge-outline text-lg py-3">Community Building</span>
      <span class="badge badge-outline text-lg py-3">Brand Representation</span>
    </div>
  </HorizontalCard>

  <div class="divider my-4"></div>

  <HorizontalCard
    title="🎥 Brand Repositioning Campaign"
    img="/projects/brand-campaign-1.jpg"
    desc="Collaborated with external agency on company rebranding campaign, serving as key liaison between stakeholders. Campaign achieved 50,000+ views and 35% increase in brand recall through strategic storytelling and cross-functional coordination."
    url="/projects/brand-campaign"
    badge="Marketing"
  >
    <div class="flex flex-wrap gap-2 mt-2">
      <span class="badge badge-outline text-lg py-3">Brand Strategy</span>
      <span class="badge badge-outline text-lg py-3">Stakeholder Management</span>
      <span class="badge badge-outline text-lg py-3">Content Creation</span>
    </div>
  </HorizontalCard>

  <div class="divider my-4"></div>
</BaseLayout>
