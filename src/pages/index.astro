---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";

const posts = [];
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hello there 👋 </div>
    <div class="text-5xl font-bold">I'm Sofia Jia</div>
    <div class="text-3xl py-3 font-bold">Impact-Oriented 🎯 Turning Ideas into Delivery</div>
    <div class="py-2">
      <text class="text-lg">
        <b>Analytical</b> and <b>entrepreneurial</b> professional who thrives at the intersection of data, people, and strategy. 
        <br>
        With a Computer Science background sharpening my analytical edge, I bridge technical complexity with human-centric solutions. 
        <br>Whether I'm optimizing products, leading cross-functional teams, or driving client growth as a <b>relentless relationship builder</b>. 
        <br>
        My superpower? Aligning data, people, and deadlines to turn plans into reality.
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="/contact" target="_self">Let's connect!</a>
      <a href="/cv" target="_self" class="btn btn-outline ml-5">
        View My Resume
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-5">Featured Projects {"</>"}</div>
  </div>

  <HorizontalCard
    title="📘 Educational Game Project Management"
    img="/projects/educational-game-preview-1.png"
    desc="Project Manager for educational 2D platformer game. Implemented structured feedback system and improved client satisfaction by 40% through strategic communication."
    url="/projects/educational-game"
    badge="Project Management"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="🌍 Intern Engagement Leadership at Emera"
    img="/projects/intern-engagement-3.jpeg"
    desc="Led co-op student committee, organized fundraising campaign ($1,200), and increased intern participation by 60%. Represented Emera at university hiring fairs."
    url="/projects/intern-engagement"
    badge="Leadership"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="🎥 Brand Repositioning Campaign"
    img="/projects/brand-campaign-1.jpg"
    desc="Led collaboration with external agency on rebranding campaign. Achieved 50,000+ views and 35% increase in brand recall among target audience."
    url="/projects/brand-campaign"
    badge="Marketing"
  />
</BaseLayout>
